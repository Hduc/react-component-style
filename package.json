{
  "name": "react-component-style",
  "version": "1.0.1",
  "description": "Component reactjs, tailwind css",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build-css",
    "build-css":"npx tailwindcss -i ./src/index.css -o ./dist/esm/index.css",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hduc/react-component-style.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "Reactjs",
    "Tailwind",
    "react-component",
    "component",
    "css"
  ],
  "author": "hduc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hduc/react-component-style/issues"
  },
  "homepage": "https://github.com/hduc/react-component-style#readme",
  "dependencies": {
    "@types/react": "^18.2.33",
    "react": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5"
  }
}
